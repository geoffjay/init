# ~/.config/starship.toml - Starship prompt configuration
# Generated by Ansible init system

format = """
$username\
$hostname\
$directory\
$git_branch\
$git_state\
$git_status\
$git_metrics\
$fill\
$nodejs\
$python\
$rust\
$golang\
$package\
$memory_usage\
$cmd_duration\
$line_break\
$character"""

[fill]
symbol = " "

[directory]
style = "blue"
read_only = " "
truncation_length = 4
truncate_to_repo = false

[character]
success_symbol = "[‚ùØ](purple)"
error_symbol = "[‚ùØ](red)"
vicmd_symbol = "[‚ùÆ](green)"

[git_branch]
symbol = "üå± "
truncation_length = 4
truncation_symbol = ""

[git_status]
format = '([\[$all_status$ahead_behind\]]($style) )'
style = "cyan"

[nodejs]
symbol = " "
detect_files = ["package.json", ".nvmrc"]
detect_folders = ["node_modules"]

[python]
symbol = " "
detect_extensions = ["py"]
detect_files = [".python-version", "Pipfile", "__init__.py", "pyproject.toml", "requirements.txt", "setup.py", "tox.ini"]

[rust]
symbol = " "
detect_extensions = ["rs"]
detect_files = ["Cargo.toml"]

[golang]
symbol = " "
detect_extensions = ["go"]
detect_files = ["go.mod", "go.sum", "glide.yaml", "Gopkg.yml", "Gopkg.lock", ".go-version"]

[package]
symbol = " "

[memory_usage]
disabled = false
threshold = -1
symbol = " "
style = "bold dimmed green"

[cmd_duration]
min_time = 2_000
format = "took [$duration](bold yellow)"

[username]
style_user = "white bold"
style_root = "black bold"
format = "[$user]($style) "
disabled = false
show_always = true

[hostname]
ssh_only = false
format = 'on [$hostname](bold red) '
trim_at = "."
disabled = false 